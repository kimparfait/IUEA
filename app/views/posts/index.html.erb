

<p id="notice"><%= notice %></p>
<div class="center">


</div>


 
    <% @posts.each do |post| %>
    <div class="col-md-4">
	<div class="post">
	
      
    <h2 class="message-title"><%=  post.title  %> </h2><BR>

    <%= link_to "View Post", post, class: "btn-custom" %>
    <%=link_to like_post_path(post), method: :put, class: "btn btn-primary" do %>
  <span class="glyphicon glyphicon-heart"  style="color:white" ></span>
   <h8  style="color:white" >Like </h8>
 <h8  style="color:white" > <%= post.get_upvotes.size %> </h8>
     <% end %>
     <br><p style="color:white;"> Posted <%= time_ago_in_words(post.created_at) %> by <%= post.user.firstname%>  </p>
    </div>
	</div>
   
    <% end %>
 

<br>
<% unless @posts.empty? %>

<nav class"navbar-fixed-bottom">
  <ul class="pager">
    <li class="previous " <%= will_paginate @posts %> <span aria-hidden="true">&larr;
   
  </ul>
</nav>
<% end %>


