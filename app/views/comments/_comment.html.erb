<div class="comment">
 
	<p class="comment-content"><%= comment.content %></p>
	<p class="comment-posted-by">Posted  <%=time_ago_in_words (comment.created_at)  %> by <%=comment.user.username %>  </p>
 

	<div class="links btn-group">
	<% if user_signed_in? %>
		<% if comment.user_id == current_user.id %>
			<%= link_to "Edit", edit_post_comment_path(comment.post, comment) , class: "btn btn-default" %>
			<%= link_to "Delete", post_comment_path(comment.post, comment), method: :delete, data: { confirm: "Are you sure?" } , class: "btn btn-default" %>
		<% end %>
		<% end %>
	</div>

	

</div>