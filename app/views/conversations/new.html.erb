<div class="col-md-6 col-md-offset-3">

  <div class="login-form">

<h1> MESSAGE</h1>
<%= form_tag conversations_path, method: :post do %>
	<div class="form-group">
	<%= select_tag :user_id, options_from_collection_for_select(@recipients, :id, :name), :prompt=>"select Student",class: "form-control" %>

	</div>
	<div class="form-group">
		<%= text_field_tag :subject, nil, placeholder:"Subject"  ,class: "form-control"%>
	</div>

	<div class="form-group">
		<%= text_area_tag :body, nil,  placeholder:"message" ,class: "form-control" %>
	</div>

  <div class="form-group">
	<%= submit_tag "SENT", class: "btn btn-primary" %>
	</div>
	<% end %>

	</div>
	</div>